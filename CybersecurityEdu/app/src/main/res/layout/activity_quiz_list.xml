<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizList">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Your Quizzes"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Here are the quizzes that are available to you based off of your age, education level, and knowledge of Computer Science.\nYou can open your quizzes by clicking on the links below. "
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/description_title" />

            <Button
                android:id="@+id/btn_to_module_1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/round_white_border"
                android:textAllCaps="false"
                android:onClick="toSurveyTemplate"
                android:paddingLeft="10dp"
                android:text="      Quiz Title 1"
                app:layout_constraintTop_toBottomOf="@id/description_text"
                android:drawableLeft="@drawable/quiz_black_and_white"
                android:gravity="left|center_vertical"/>
            <Button
                android:id="@+id/btn_to_module_2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/round_white_border"
                android:textAllCaps="false"
                android:onClick="toSurveyTemplate"
                android:paddingLeft="10dp"
                android:text="      Quiz Title 2"
                app:layout_constraintTop_toBottomOf="@id/btn_to_module_1"
                android:drawableLeft="@drawable/quiz_black_and_white"
                android:gravity="left|center_vertical"/>
            <Button
                android:id="@+id/btn_to_module_3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/round_white_border"
                android:textAllCaps="false"
                android:onClick="toSurveyTemplate"
                android:paddingLeft="10dp"
                android:text="      Quiz Title 3"
                app:layout_constraintTop_toBottomOf="@id/btn_to_module_2"
                android:drawableLeft="@drawable/quiz_black_and_white"
                android:gravity="left|center_vertical"/>
            <Button
                android:id="@+id/btn_to_module_4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/round_white_border"
                android:textAllCaps="false"
                android:onClick="toSurveyTemplate"
                android:paddingLeft="10dp"
                android:text="      Quiz Title 4"
                app:layout_constraintTop_toBottomOf="@id/btn_to_module_3"
                android:drawableLeft="@drawable/quiz_black_and_white"
                android:gravity="left|center_vertical"/>
            <Button
                android:id="@+id/btn_to_module_5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/round_white_border"
                android:textAllCaps="false"
                android:onClick="toSurveyTemplate"
                android:paddingLeft="10dp"
                android:text="      Quiz Title 5"
                app:layout_constraintTop_toBottomOf="@id/btn_to_module_4"
                android:drawableLeft="@drawable/quiz_black_and_white"
                android:gravity="left|center_vertical"/>
            <Button
                android:id="@+id/btn_to_module_6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/round_white_border"
                android:textAllCaps="false"
                android:onClick="toSurveyTemplate"
                android:paddingLeft="10dp"
                android:text="      Quiz Title 6"
                app:layout_constraintTop_toBottomOf="@id/btn_to_module_5"
                android:drawableLeft="@drawable/quiz_black_and_white"
                android:gravity="left|center_vertical"/>

            <Button
                android:id="@+id/btn_to_module_7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/round_white_border"
                android:textAllCaps="false"
                android:onClick="toSurveyTemplate"
                android:paddingLeft="10dp"
                android:text="      Quiz Title 7"
                app:layout_constraintTop_toBottomOf="@id/btn_to_module_6"
                android:drawableLeft="@drawable/quiz_black_and_white"
                android:gravity="left|center_vertical"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>